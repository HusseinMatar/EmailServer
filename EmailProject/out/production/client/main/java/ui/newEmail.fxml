<?xml version="1.0" encoding="UTF-8"?>

<!-- NewEmail.fxml -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.controller.NewEmailController"
            prefWidth="400.0" prefHeight="300.0">

    <VBox spacing="10" alignment="CENTER">
        <Label fx:id="fromField" />
        <Label fx:id="notValidEmailLabel" visible="false"/>
        <TextField fx:id="recipientsField" promptText="Recipients (comma-separated)"/>
        <TextField fx:id="subjectField" promptText="Subject"/>
        <TextArea fx:id="bodyArea" promptText="Email Body" />
        <Button fx:id="sendNewEmailButton" text="Send Email" onAction="#handleSendEmail"/>
    </VBox>

</AnchorPane>

